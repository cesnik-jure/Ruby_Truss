class Truss
  puts "Truss"
  
  @instance = "truss instance"
  @@class = "truss class"
  
  puts @instance
  puts defined? @instance
  puts @@class
  puts defined? @@class
  
  class Element
  
    puts "\nElement"
    
    @instance = "element instance"
    @@class = "element class"
    
    puts @instance
    puts defined? @instance
    puts @@class
    puts defined? @@class
  
  end
  
  puts "\nTruss"
  
  puts Element::@instance
  puts defined? @instance
  puts @@class
  puts defined? @@class

end

puts "\nout"
