require 'rubygems'

require "rexml/document"
include REXML    # so that we don't have to prefix everything with REXML::


puts "-----Start try:------"
puts

truss_name = "truss_02"

file = File.new(truss_name + ".xml", "w")
file.write("Tuki bo XML enkrat.
al pa ne.")   
file.close

File.open(truss_name + ".xml", "r").each_line do |line|
  puts line
end


doc2 = Document.new
doc2.add_element("bibliography", {"id" => "philosophy"})
doc2.root.add_element("biblioentry")
biblioentry = doc2.root.elements[1]
author = Element.new("author")
author.add_element("firstname")
author.elements["firstname"].text = "Bertrand"
author.add_element("surname")
author.elements["surname"].text = "Russell"
biblioentry.elements << author
title = Element.new("title")
title.text = "The Problems of Philosophy"
biblioentry.elements << title
biblioentry.elements << Element.new("pubdate")
biblioentry.elements["pubdate"].text = "1912"
biblioentry.add_attribute("id", "ISBN0-19-285423-2")
puts doc2

