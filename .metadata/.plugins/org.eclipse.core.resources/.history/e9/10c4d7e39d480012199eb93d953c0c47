require_relative "new_methods"

matrika1 = Matrix[[1,1], [0,0], [1,1], [0,0]]
matrika1.mputs

nu_node = 4

matrika2 = Matrix.build(nu_node, 2) {|row, col| 0 }
matrika2.mputs


column_nu = 0 

for i in 0..(nu_node - 1)
  for j in 0..1
    if matrika1.[](i, j) == 1 then 
      matrika2.[]=(column_nu, 0, i)
      column_nu += 1
    end
  end  
end