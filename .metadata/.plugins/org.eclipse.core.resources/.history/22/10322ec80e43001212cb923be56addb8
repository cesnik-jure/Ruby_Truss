require_relative 'new_methods'

require 'matrix'
require 'matrix/eigenvalue_decomposition.rb'

require 'rubygems'
require 'builder'



favorites = {
  'candy' => 'Neccos', 'novel' => 'Empire of the Sun', 'holiday' => 'Easter'
}

xml = Builder::XmlMarkup.new( :target => $stdout, :indent => 2 )

xml.instruct! :xml, :version => "1.1", :encoding => "US-ASCII"

xml.favorites do 
 favorites.each do | name, choice |
  xml.favorite( choice, :item => name )
 end
end

puts xml.class

puts "-----Start try:------"
puts

truss_name = "truss_02"


file = File.new(truss_name + ".xml", "w")
file.write(xml)   
file.close

File.open(truss_name + ".xml", "r").each_line do |line|
  puts line
end



